    <h4>Click below to learn about some things I love.</h4>

    <div class="team">
        <!-- loop through all our team members and put their info on the page -->
        {{#each people}} <!-- this is like a JS forEach loop -->
        <div class="user-panel">
           <h1>{{Name}}</h1>
           <img src="images/{{avatar}}" alt="user image" class="u-avatar">
           <a href="{{ID}}" class="u-link">
               Tell Me More
           </a>
           <h3>{{description}}</h3>
        </div>
        {{/each}} <!-- this is terminating the loop --> 
        
    </div>
    </div>

    <!-- this will be filled in on the client side when we render our AJAX data -->
    <section class="lightbox">
        <span class="close">x</span>
        <div class="sidebar">
            <img src="" alt="larger bio image">
        </div>

        <div class="lb-content">

        </div>
    </section>
</section>
